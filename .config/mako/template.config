# Mako notification daemon configuration
# Tokyo Night theme
# Colors from: ~/.config/themes/tokyo-night.conf

# Position and size
anchor=top-right
width=420
outer-margin=20
padding=15
margin=10

# Appearance - Tokyo Night colors
font=monospace 12
background-color=${COLOR_BACKGROUND}
text-color=${COLOR_FOREGROUND}
border-color=${COLOR_BLUE}
border-size=2
border-radius=8

# Icon
max-icon-size=48
icon-location=left

# Behavior
default-timeout=5000
ignore-timeout=0

# Grouping
group-by=app-name
max-visible=5

# Urgency levels
[urgency=low]
border-color=${COLOR_SUCCESS}

[urgency=normal]
border-color=${COLOR_BLUE}

[urgency=critical]
border-color=${COLOR_CRITICAL}
background-color=${COLOR_BACKGROUND_ALT}
default-timeout=0

# Special app handling
[app-name=Spotify]
border-color=${COLOR_SUCCESS}
