# Mako notification daemon configuration

# Position and size
anchor=top-right
width=420
outer-margin=20
padding=15
margin=10

# Appearance
font=monospace 12
background-color={{ (ds "theme").colors.background.hex }}
text-color={{ (ds "theme").colors.foreground.hex }}
border-color={{ (ds "theme").colors.blue.hex }}
border-size=2
border-radius=8

# Icon
max-icon-size=48
icon-location=left

# Behavior
default-timeout=5000
ignore-timeout=0

# Grouping
group-by=app-name
max-visible=5

# Urgency levels
[urgency=low]
border-color={{ (ds "theme").colors.success.hex }}

[urgency=normal]
border-color={{ (ds "theme").colors.blue.hex }}

[urgency=critical]
border-color={{ (ds "theme").colors.critical.hex }}
background-color={{ (ds "theme").colors.background_alt.hex }}
default-timeout=0
